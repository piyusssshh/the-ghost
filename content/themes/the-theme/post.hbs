                    </div>
                </div>

                <!-- Feature Image -->
                {{#post}}
                    {{#if feature_image}}
                        <div style="margin: 0 auto; max-width: 300px;">
                            <img src="{{feature_image}}" alt="{{title}}" style="width: 100%; height: auto; border-radius: 8px;">
                        </div>
                    {{/if}}
                {{/post}}
            </div>

            {{> "related-posts"}}

            {{#post}}
                {{> "comments"}}
            {{/post}}

            <script>
                document.addEventListener("DOMContentLoaded", function() {
                    const links = document.querySelectorAll(".gh-content link a");
                    links.forEach(link => {
                        link.setAttribute("target", "_blank");
                        link.setAttribute("rel", "noopener noreferrer");
                    });
                });
            </script>

            <style>
                .gh-content link a {
                    color: #0000FF !important;
                    text-decoration: none;
                }
                
                .gh-content link a:hover {
                    color:#0066cc !important;
                }
            </style>
        </article>
    {{/post}}
</main>